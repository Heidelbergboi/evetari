# Create .gitignore (prevents venv + .env from being tracked)
@"
# Python
__pycache__/
*.py[cod]
*.egg-info/
dist/
build/

# Virtual env
venv/

# Env (keep your local .env, don't commit)
.env

# DB / logs / secrets
*.sqlite*
*.db
*.log
scrape_twitter.log
client_secret*.json

# OS / IDE
.DS_Store
Thumbs.db
.vscode/
.idea/
"@ | Set-Content -Encoding utf8 .gitignore

# Create a safe template for others
@"
APIFY_TOKEN=
APIFY_TWITTER_ACTOR=apidojo/tweet-scraper
APIFY_SINCE_DAYS=7
APIFY_MAX_ITEMS=50
APIFY_USE_SEARCH_TERMS=0
APIFY_EXTRA_QUERY=

OPENAI_API_KEY=

FLASK_ENV=development
SQLALCHEMY_DATABASE_URI=sqlite:///app.db
SECRET_KEY=change-me

GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
"@ | Set-Content -Encoding utf8 .env.example
